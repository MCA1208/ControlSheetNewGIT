
@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<script type="text/javascript">

    $(document).ready(function () {
        
        $('#liContact').css('background-color', '');
        $('#liHome').css('background-color', '');
        $('#liSheet').css('background-color', '#000000');

    });

</script>

<div class="form-horizontal" style="text-align:center; ">
    <div class="container body-content" style="text-align: center; height:60%">
        <br /><br />
        <label style="height:20%; font-size:xx-large">
            Iniciar Sesión en Control Sheet
        </label>
        <br /><br />

        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center">

            <div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-info text-white" id="basic-addon1"><i class="fas fa-user"></i></span>
                    </div>
                    <input id="txtUser" type="text" class="form-control form-control-lg" placeholder="Usuario" aria-label="Username" aria-describedby="basic-addon1" value="" required" />
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-warning text-white" id="basic-addon2"><i class="fas fa-lock"></i></span>
                    </div>
                    <input id="txtPass" type="password" class="form-control form-control-lg" placeholder="Contrase&ntilde;a" aria-label="Password" aria-describedby="basic-addon2" value="" required />
                </div>
            </div>

        </div>
        <br />
        <div class="col-xs-12">
            <div class="center-block">
                <button class="btn btn-primary" id="btnLogin" onclick="Login();"><i class="fas fa-sign-in-alt"></i> Ingresar</button>
            </div>
        </div>
        <br />
    </div>
    <div class="container body-content">

        <div class="row">
            <div class="col-md-4">

                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CreateUserModal"><i class="fas fa-user-plus"></i> Registrarse </button>
            </div>
            <div class="col-md-4">
                <button class="btn btn-secondary" onclick="showMessage();"><i class="fas fa-unlock"></i> ¿Olvido su contraseña? </button>

            </div>
            <div class="col-md-4">
                <button class="btn btn-primary" onclick="Login();"><i class="fas fa-file-download"></i> Documento</button>
            </div>

        </div>

    </div>

</div>


<!--Begin MODAL-->
<!-- Button trigger modal -->
<!-- Modal -->

<div class="modal fade" id="CreateUserModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-striped" style="color:black">
                    <tr>
                        <th>Grupo de actividad o compañía</th>
                        <td>
                            <input style="width:300px" id="txtCompany" type="text" />
                        </td>

                    </tr>
                    <tr>
                        <th>EMail</th>
                        <td>
                            <input style="width:300px" id="txtNewEmail" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <th>Contraseña</th>
                        <td>
                            <input style="width:300px" id="txtNewPass" type="password" />
                        </td>

                    </tr>
                    <tr>
                        <th>Repita la contraseña</th>
                        <td>
                            <input style="width:300px" id="txtNewPassRepeat" type="password" />
                        </td>

                    </tr>

                </table>
                @*</div>*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="createUserAdmin();"><i class="fas fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>
<!--End MODAL-->

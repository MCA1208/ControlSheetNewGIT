
@{
    Layout = "~/Views/Shared/_LayoutTimeSheet.cshtml";
}

<script type="text/javascript">

    $(document).ready(function () {

        $('#liReport').css('background-color', '#000000');
        
    });

</script>

<div class="card">
    <div class="card-body" style="color:black; background-color:seagreen; font-family:fantasy; font-size:xx-large">
        Reporte Principal
    </div>
</div>

<div class="card-body">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 card-body">             
                <label>Fecha Desde: </label>
                <input id="dateBegin" type="date" name="Fecha desde" />          
            </div>
            <div class="col-md-4 card-body">            
                <label>Fecha Hasta: </label>
                <input id="dateEnd" type="date" name="Fecha hasta" />
            </div>
            <div class="col-md-4">   
                <div class="card-body">
                    <label>Estado: </label>
                    <select name="Estado" id="Estado">
                        <option value="" disabled selected>Seleccione el estado...</option>
                        <option value="1">Activos</option>
                        <option value="0">Finalizados</option>
                        <option value="">Todos</option>
                    </select>
                </div>
            </div>
            </div>
            <div class="row">
                <div class="card-body">
                    <button type="button" class="btn btn-primary" onclick="LoadReportprincipal();"><i class="fas fa-search"></i> Buscar</button>
                </div>
            </div>
            <div class="table-responsive">

                <table id="tblReportPrincipal" class="table" style="color:black; text-align:left">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Nombre Proyecto</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Fecha Creación</th>
                            <th scope="col">Horas Estimadas</th>
                            <th scope="col">Horas Consumidas</th>
                            <th scope="col">Fecha Fin Por Tarea</th>
                            <th scope="col">Usuario</th>
                            <th scope="col">Estado</th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>
    </div>




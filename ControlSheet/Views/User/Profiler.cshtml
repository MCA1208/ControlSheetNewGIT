<script type="text/javascript">

    $(document).ready(function () {

        $('#liConfig').css('background-color', '#000000');

    });

</script>


<div class="card">
    <div class="card-body" style="color:black; background-color:aqua; font-family:fantasy; font-size:xx-large">
        Cambiar Contraseña
    </div>
</div>
<div class="card-body" style="color:white;background-color:#212F3C;text-align:center ">

    <div class="form-horizontal" style="text-align:center; ">

            <div class="auth-wrapper d-flex no-block justify-content-center align-items-center">
                <div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-info text-white" id="basic-addon1"><i class="fas fa-key"></i></span>
                        </div>
                        <input id="txtNewPass" type="password" class="form-control form-control-lg" placeholder="Nueva Contraseña" aria-label="Password" aria-describedby="basic-addon1" value="" required" />
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-warning text-white" id="basic-addon2"><i class="fas fa-key"></i></span>
                        </div>
                        <input id="txtRepeatNewPass" type="password" class="form-control form-control-lg" placeholder="Repetir Contraseña" aria-label="Password" aria-describedby="basic-addon2" value="" required />
                    </div>
                </div>
            </div>
            <div class="card-body">
                <button type="button" class="btn btn-primary" onclick="changePassword();"><i class="fas fa-unlock-alt"></i> Cambiar Contraseña</button>
            </div>

    </div>
</div>



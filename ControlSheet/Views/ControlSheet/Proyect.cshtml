    <script src="~/Scripts/bootstrap-4.2.1/js/bootstrap.min.js"></script>

    <script src="~/Scripts/fontawesome/all.js"></script>
    <script src="~/Scripts/AlertMessage/alertifyjs/alertify.js"></script>


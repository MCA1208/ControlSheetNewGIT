
@{
    Layout = null;
}

<link href="~/Scripts/AlertMessage/alertifyjs/css/alertify.css" rel="stylesheet" />
<link href="~/Scripts/AlertMessage/alertifyjs/css/themes/default.css" rel="stylesheet" />
<link href="~/Scripts/bootstrap-4.2.1/css/bootstrap.min.css" rel="stylesheet" />

<script src="~/Scripts/Controller/LoginController.js"></script>
<script src="~/Scripts/AlertMessage/alertifyjs/alertify.js"></script>
<script src="~/Scripts/GlobalFunc/General.js"></script>
<script src="~/Scripts/GlobalFunc/URLController.js"></script>

<script src="~/Scripts/jquery-3.4.0/jquery-3.4.0.min.js"></script>
<script src="~/Scripts/bootstrap-4.2.1/js/bootstrap.min.js"></script>
<script src="~/Scripts/fontawesome/all.js"></script>

<head>
    <title>Control Sheet</title>
</head>

<body style=" background: #303030; color: white">
    <div class="form-horizontal" style="text-align:center; ">
        
            <div class="panel-heading navbar" style=" background: #494949; height:15%; ">

                <div class="container">
                    <div class="row justify-content-md-center" >

                        @*<div class="col-md-6" >
                    
                                <img src="~/Image/controlsheet.PNG" class="img-responsive" alt="Cinque Terre" style="padding: 10px; float: left; width: 80px;" />
                          
                        </div>
                        <div class="col-md-6">
                            <img src="~/Image/LogoUrban.png" style="padding: 10px; float: right; width: 80px;" />
                        </div>*@

                    </div>

                </div>
            </div>

            <div class="container body-content" style="text-align: center; height:60%">
                <br /><br />
                <label style="height:20%; font-size:xx-large">
                    Iniciar Sesión en Control Sheet
                </label>
                <br /><br />
                <table class="table table-bordered" style="margin: 0 auto; text-align: left; width:50%">

                    <tr style="width:500px">

                        <th>
                            EMail
                        </th>
                        <td>
                            <input id="txtUser" type="text" style="width:300px" />
                        </td>
                    </tr>
                    <tr>

                        <th>
                            Contraseña
                        </th>
                        <td>
                            <input id="txtPass" type="password" style="width:300px"/>
                        </td>
                    </tr>


                </table>
                <br />
                <div class="col-xs-12">
                    <div class="center-block">
                        <button class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Ingresar</button>
                    </div>
                </div><br />

                <hr style="border-color:#494949"/>
                <div class="row" >
                    <div class="col-md-4">
                        
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CretaeUserModal"><i class="fas fa-user-plus"></i> Registrarse </button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-secondary"  onclick="showMessage();"><i class="fas fa-unlock"></i> ¿Olvido su contraseña? </button>
    
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-primary" onclick="Login();"><i class="fas fa-file-download"></i> Documento</button>
                    </div>
 
                </div>

            </div>
            <div class="container body-content ">
                <hr style="border-color:#494949" />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Urban Champion</p>
                </footer>
            </div>
        </div>

    
</body>

<!--Begin MODAL-->

<!-- Button trigger modal -->


<!-- Modal -->

<div class="modal fade" id="CretaeUserModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-striped" style="color:black">
                    <tr>
                        <th>Grupo de actividad o compañía</th>
                        <td>
                            <input style="width:300px" id="txtCompany" type="text" />
                        </td>

                    </tr>
                    <tr>
                        <th>EMail</th>
                        <td>
                            <input style="width:300px" id="txtNewEmail" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <th>Contraseña</th>
                        <td>
                            <input style="width:300px" id="txtNewPass" type="password" />
                        </td>

                    </tr>
                    <tr>
                        <th>Repita la contraseña</th>
                        <td>
                            <input style="width:300px" id="txtNewPassRepeat" type="password" />
                        </td>

                    </tr>

                </table>
                @*</div>*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="createUserAdmin();"><i class="fas fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>
<!--End MODAL-->


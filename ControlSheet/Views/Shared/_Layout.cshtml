<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background:#000000">
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Nombre de aplicación", "Index", "ControlSheet", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tableros</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Proyectos", "Proyect", "ControlSheet")</li>
                            <li>@Html.ActionLink("Historial", "Edit", "Log")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Reportes", "Report", "ControlSheet")</li>
               
                    <li>@Html.ActionLink("Ayuda", "Help", "ControlSheet")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="background:#000000">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Urban Champion</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

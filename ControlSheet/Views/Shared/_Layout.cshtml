<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Control Sheet</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="background:#000000">
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Nombre de aplicación", "Index", "ControlSheet", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <div class="container">
                    <div class="row">
                        <ul class="nav navbar-nav">
                            <li class="col-sm">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tableros</a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item active border border-success col-sm" style="border:2px solid silver; text-align:center">@Html.ActionLink("Proyectos", "Proyect", "ControlSheet")</li>
                                    @if ((int)HttpContext.Current.Session["idUserProfile"] == 2)
                                    {
                                        <li>@Html.ActionLink("Historial", "Edit", "Log")</li>
                                    }
                                </ul>
                            </li>
                            <li class="col-sm">@Html.ActionLink("Reportes", "Report", "ControlSheet")</li>
                            <li class="col-sm">@Html.ActionLink("Ayuda", "Help", "ControlSheet")</li>
                            <li class="col-sm">@Html.ActionLink("Salir", "LogOut", "ControlSheet")</li>
                        </ul>
                    </div>
                </div>
        </div>
    </div>
    <div class="container body-content" style="background:#000000; text-align:center">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Urban Champion</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
